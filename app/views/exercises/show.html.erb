<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Exercise #<%= @exercise.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @exercise.name.titleize %></dd>

              <dt>Reps</dt>
              <dd><%= @exercise.reps %></dd>

              <dt>Sets</dt>
              <dd><%= @exercise.sets %></dd>

              <dt>Description</dt>
              <dd><%= @exercise.description %></dd>

              <dt>Muscle group</dt>
              <dd><%= @exercise.muscle_group.location %></dd>

              <dt>Difficulty</dt>
              <dd><%= @exercise.difficulty.level %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to exercises_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_exercise_url(@exercise.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to exercise_url(@exercise.id), :method => "delete", :data => { :confirm => "Do you really want to delete this exercise?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
