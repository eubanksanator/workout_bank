<!-- Validation failure messages -->

<% if @difficulty.errors.any? %>
  <% @difficulty.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Difficulty #<%= @difficulty.id %></h3>
      </div>
      <div class="panel-body">
        <%= form_tag difficulty_url(@difficulty.id), :method => "patch", :class => "form-horizontal" do %>
          <!-- Label and input for level -->
          <div class="form-group">
            <label for="level" class="col-sm-2 control-label">
              Level
            </label>
            <div class="col-sm-10">
              <input type="text" id="level" name="level" placeholder="Level" class="form-control" value="<%= @difficulty.level %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Difficulty" class="btn btn-warning">
              or
              <%= link_to "Cancel", difficulty_url(@difficulty.id) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
