<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Muscle Group #<%= @muscle_group.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Location</dt>
              <dd><%= @muscle_group.location %></dd>
            <ul>
            <% @muscle_group.exercises.each do |muscle| %>
              <li><%= muscle.name %></li>
            <%end %>
            </ul>
            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to muscle_groups_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_muscle_group_url(@muscle_group.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to muscle_group_url(@muscle_group.id), :method => "delete", :data => { :confirm => "Do you really want to delete this muscle_group?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
